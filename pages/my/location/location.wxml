<view class='shopInfo'>
  <view class='shopname'>
    地址：湖北省天门市景天建材市场附件
  </view>
</view>
<view class="mainView">
   <map
        class="mapView"
        style="width: 100%; height: 375px;"
        latitude="{{latitude}}"
        longitude="{{longitude}}"
        markers="{{markers}}"
        covers="{{covers}}"
        scale='18'
        >
    </map>
</view>

<view class="head" style="flex-direction:row;">
    <view class='distanceTxt'>
      <image class="icon" src="/images/run.svg" mode="aspectFill" style='width:50rpx;height:30rpx;margin-right:20rpx;margin-top:8rpx;'></image>
      <text>距离我约：{{meters}}km</text>
    </view>
    <button bindtap="openTgLocation" style='width:200rpx;margin-top:30rpx;'>导航</button>
</view>



